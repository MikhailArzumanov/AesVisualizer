<UserControl 
    x:Class="AesVisualizer.Components.MainPanel.MainPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AesVisualizer.Components.MainPanel"
    xmlns:aes="clr-namespace:AesVisualizer.Components.MainPanel.Aes"
    xmlns:info="clr-namespace:AesVisualizer.Components.MainPanel.Info"
    mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800"
    d:Background="White"
>
    <Grid>
        <info:InfoPanel x:Name="InfoPanel" Opacity="0.0"/>
        <aes:AesPanel   x:Name="AesPanel"  Opacity="0.0"/>
    </Grid>
</UserControl>
