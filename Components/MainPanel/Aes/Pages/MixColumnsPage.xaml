<local:BasePage 
    x:Class="AesVisualizer.Components.MainPanel.Aes.Pages.MixColumnsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AesVisualizer.Components.MainPanel.Aes.Pages"
    xmlns:grids="clr-namespace:AesVisualizer.Components.Grids"
    xmlns:components="clr-namespace:AesVisualizer.Components.MainPanel.Aes.Pages.MixColumnsComponents"
    mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="800"
    d:Background="White"
>
    <ScrollViewer>
        <Grid  Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <components:MainPart x:Name="mainPart"
                Grid.Column="1" Grid.ColumnSpan="5"
                Grid.RowSpan="3"
            />
            <components:Details x:Name="detailsPart"
                Grid.Column="1" Grid.ColumnSpan="5"
                Grid.Row="3" Grid.RowSpan="3"
            />
        </Grid>
    </ScrollViewer>
</local:BasePage>
